<form method="post" action="{{ path('admin_chapter_delete', {id: chapter.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tutoriel ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
    <button class="form-btn bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2">Supprimer</button>
</form>
