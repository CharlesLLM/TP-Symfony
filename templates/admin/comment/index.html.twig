{% extends 'base.html.twig' %}

{% block title %}Liste des commentaires{% endblock %}

{% block content %}
    <section>
        <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold">Liste des commentaires</h1>
            <a href="{{ path('admin_comment_new') }}" class="form-btn bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2">Cr√©er un commentaire</a>
        </div>

        <ul class="mt-12 grid grid-cols-2 gap-5 sm:grid-cols-3 lg:grid-cols-4 px-16">
            {% for comment in comments %}
                <li>
                    <a href="{{ path('admin_comment_edit', {id: comment.id}) }}" class="relative flex flex-col overflow-hidden aspect-square border rounded-xl hover:scale-105 transition hover:shadow-md hover:opacity-90">
                        <div class="size-full bg-white px-3 flex items-center justify-between border-t-2">
                            <span class="capitalize font-medium pr-2"><span class="font-bold">{{ comment.author.username }}</span>
                            <span class="capitalize font-medium pr-2"><span class="line-clamp-5">{{ comment.content }}</span>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
