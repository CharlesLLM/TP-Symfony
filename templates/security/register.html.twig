{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <h1 class="text-2xl leading-none font-bold mb-5">Inscription</h1>

    {{ form_start(registrationForm, {attr: {class: 'border-2 border-gray-300 rounded-xl p-5'}}) }}
        {{ form_row(registrationForm.username, {
            attr: {class: 'border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full'},
            label_attr: {class: 'font-semibold text-sm text-gray-600 pb-1 block'}
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            attr: {class: 'border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full'},
            label_attr: {class: 'font-semibold text-sm text-gray-600 pb-1 block'}
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            attr: {class: 'border rounded-lg px-3 py-2 mt-1 mb-5'},
            label_attr: {class: 'font-semibold text-sm text-gray-600 pb-1 block'}
        }) }}
        <button class="form-btn bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
